<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Header Status -->
        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🚁 Inizializzazione DJI Mini 3 Pro..."
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:background="@drawable/status_background"
            android:textColor="#2196F3"
            android:gravity="center" />

        <!-- Connection Button -->
        <Button
            android:id="@+id/connectButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="🔗 Verifica Connessione"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#2196F3"
            android:textColor="@android:color/white" />

        <!-- Sensor Information Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:cardCornerRadius="12dp"
            android:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📡 SISTEMA SENSORI - DJI Mini 3 Pro"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:layout_marginBottom="12dp" />

                <!-- Vision System Status -->
                <TextView
                    android:id="@+id/visionStatusText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="👁️ Vision System: Inizializzazione..."
                    android:textSize="13sp"
                    android:layout_marginBottom="8dp"
                    android:padding="8dp"
                    android:background="@drawable/sensor_item_background" />

                <!-- Obstacle Detection -->
                <TextView
                    android:id="@+id/obstacleDistanceText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🚧 Rilevamento Ostacoli: Caricamento..."
                    android:textSize="13sp"
                    android:layout_marginBottom="8dp"
                    android:padding="8dp"
                    android:background="@drawable/sensor_item_background" />

                <!-- GPS Status -->
                <TextView
                    android:id="@+id/gpsStatusText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🛰️ GPS/GNSS: Ricerca satelliti..."
                    android:textSize="13sp"
                    android:layout_marginBottom="8dp"
                    android:padding="8dp"
                    android:background="@drawable/sensor_item_background" />

                <!-- Battery Status -->
                <TextView
                    android:id="@+id/batteryStatusText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🔋 Batteria: Lettura..."
                    android:textSize="13sp"
                    android:layout_marginBottom="8dp"
                    android:padding="8dp"
                    android:background="@drawable/sensor_item_background" />

                <!-- Altitude -->
                <TextView
                    android:id="@+id/altitudeText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📏 Altitudine: Misurazione..."
                    android:textSize="13sp"
                    android:layout_marginBottom="8dp"
                    android:padding="8dp"
                    android:background="@drawable/sensor_item_background" />

                <!-- Velocity -->
                <TextView
                    android:id="@+id/velocityText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🚀 Velocità: Calcolo..."
                    android:textSize="13sp"
                    android:padding="8dp"
                    android:background="@drawable/sensor_item_background" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Flight Control Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:cardCornerRadius="12dp"
            android:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🚁 CONTROLLO VOLO"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="12dp">

                    <Button
                        android:id="@+id/takeoffButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="🛫 Decollo"
                        android:enabled="false"
                        android:backgroundTint="#4CAF50"
                        android:layout_marginEnd="8dp"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/landButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="🛬 Atterraggio"
                        android:enabled="false"
                        android:backgroundTint="#FF5722"
                        android:layout_marginStart="8dp"
                        android:textColor="@android:color/white" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Sensor Control Card - AGGIORNATA PER MINI 3 PRO -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:cardCornerRadius="12dp"
            android:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⚙️ CONTROLLI SENSORI"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="12dp">

                    <Button
                        android:id="@+id/enableObstacleAvoidanceButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="✅ Abilita APAS"
                        android:enabled="false"
                        android:backgroundTint="#4CAF50"
                        android:layout_marginEnd="8dp"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/disableObstacleAvoidanceButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="❌ Disabilita APAS"
                        android:enabled="false"
                        android:backgroundTint="#F44336"
                        android:layout_marginStart="8dp"
                        android:textColor="@android:color/white" />

                </LinearLayout>

                <!-- Vision Positioning Button (sostituisce Precision Landing) -->
                <Button
                    android:id="@+id/visionPositioningButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="👁️ Toggle Vision Positioning"
                    android:enabled="false"
                    android:backgroundTint="#9C27B0"
                    android:textColor="@android:color/white" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Mini 3 Pro Capabilities Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:cardCornerRadius="12dp"
            android:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🎯 MINI 3 PRO - SPECIFICHE SENSORI"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✅ SUPPORTATO:\n• Vision Sensors (Front/Back/Down)\n• APAS 4.0 Obstacle Avoidance\n• Vision Positioning Standard\n• GPS/GNSS Dual Positioning\n• Real-time Telemetry\n• Sub-250g (No Registration*)"
                    android:textSize="13sp"
                    android:lineSpacingExtra="2dp"
                    android:textColor="#2E7D32"
                    android:background="@drawable/info_background"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="❌ NON SUPPORTATO:\n• Precision Landing (errore SDK)\n• Sensori Laterali (limitazione hardware)\n• Funzioni Enterprise avanzate"
                    android:textSize="13sp"
                    android:lineSpacingExtra="2dp"
                    android:textColor="#D32F2F"
                    android:background="#FFEBEE"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="⚠️ SICUREZZA: Attenzione durante volo laterale - nessun sensore sui lati. APAS 4.0 protegge solo front/back/down."
                    android:textSize="12sp"
                    android:textColor="#F57C00"
                    android:background="#FFF3E0"
                    android:padding="8dp"
                    android:textStyle="italic" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- SDK Info Footer -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📱 DJI SDK v5.8.0 | Mini 3 Pro Compatible\n🔧 Build: Production Ready"
            android:textSize="11sp"
            android:textColor="#666"
            android:gravity="center"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>