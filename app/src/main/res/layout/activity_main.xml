<?xml version="1.0" encoding="utf-8"?>
<!-- activity_main.xml - Layout per DJI Mini 3 Base -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Header Status -->
        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🚁 Inizializzazione DJI Mini 3 Base..."
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:background="@drawable/status_background"
            android:textColor="#2196F3"
            android:gravity="center" />

        <!-- Connection Button -->
        <Button
            android:id="@+id/connectButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="🔗 Verifica Connessione"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#2196F3"
            android:textColor="@android:color/white" />

        <!-- AVVISO SICUREZZA -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:cardCornerRadius="12dp"
            android:cardElevation="4dp"
            android:cardBackgroundColor="#FFEBEE">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⚠️ MINI 3 BASE - NESSUN OBSTACLE AVOIDANCE"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#D32F2F"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Solo sensori downward per atterraggio\n• Controllo visivo SEMPRE richiesto\n• Volo manuale completo necessario"
                    android:textSize="12sp"
                    android:textColor="#D32F2F" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Sensori Base -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:cardCornerRadius="12dp"
            android:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📡 SENSORI MINI 3 BASE"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/downwardSensorText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="⬇️ Sensori Downward: Inizializzazione..."
                    android:textSize="13sp"
                    android:layout_marginBottom="8dp"
                    android:padding="8dp"
                    android:background="@drawable/sensor_item_background" />

                <TextView
                    android:id="@+id/gpsStatusText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🛰️ GPS: Ricerca satelliti..."
                    android:textSize="13sp"
                    android:layout_marginBottom="8dp"
                    android:padding="8dp"
                    android:background="@drawable/sensor_item_background" />

                <TextView
                    android:id="@+id/batteryStatusText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🔋 Batteria: Lettura..."
                    android:textSize="13sp"
                    android:layout_marginBottom="8dp"
                    android:padding="8dp"
                    android:background="@drawable/sensor_item_background" />

                <TextView
                    android:id="@+id/altitudeText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📏 Altitudine: Misurazione..."
                    android:textSize="13sp"
                    android:layout_marginBottom="8dp"
                    android:padding="8dp"
                    android:background="@drawable/sensor_item_background" />

                <TextView
                    android:id="@+id/velocityText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🚀 Velocità: Calcolo..."
                    android:textSize="13sp"
                    android:padding="8dp"
                    android:background="@drawable/sensor_item_background" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Controlli Base -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:cardCornerRadius="12dp"
            android:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🚁 CONTROLLI BASE"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="12dp">

                    <Button
                        android:id="@+id/takeoffButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="⚠️ Decollo"
                        android:backgroundTint="#FF9800"
                        android:layout_marginEnd="8dp"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/landButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="🛬 Atterraggio"
                        android:backgroundTint="#4CAF50"
                        android:layout_marginStart="8dp"
                        android:textColor="@android:color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/quickShotsButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="📽️ QuickShots"
                        android:backgroundTint="#9C27B0"
                        android:layout_marginEnd="8dp"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/returnHomeButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="🏠 RTH"
                        android:backgroundTint="#607D8B"
                        android:layout_marginStart="8dp"
                        android:textColor="@android:color/white" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Info Footer -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📱 DJI SDK v5.11.0 | Mini 3 Base\n⚠️ Per controlli volo completi usa DJI Fly"
            android:textSize="11sp"
            android:textColor="#666"
            android:gravity="center"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>